  padding: 30rpx;
}

.naicha .bt {
  font-weight: 900;
}

.naicha .nr {
  display: flex;
  margin-top: 40rpx;
}

.naicha .nr .bqt .bq {
  width: 22rpx;
  height: 22rpx;
  padding-top: 5rpx;
  display: inline-block;
  /* vertical-align: middle; */
}

.naicha .nr .bqt {
  font-size: 24rpx;
