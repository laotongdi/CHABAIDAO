/* pages/demo/demo.wxss */
page {
  height: 73.6%;
}

.top {
  display: flex;
  padding: 44rpx 0 0 20rpx;
}

.left {
  width: 280rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: rgb(241, 240, 240);
  display: flex;
  font-size: 32rpx;
  text-align: center;
  border-radius: 67rpx;
}

.left view {
  padding-right: 18rpx;
  flex: 1;
}

.checked {
  margin: 5rpx 0 5rpx 5rpx;
  padding: 0 18rpx 0 18rpx;
  background-color: rgb(27, 27, 145);
  color: white;
  border-radius: 67rpx;
  line-height: 1.8;
}

.right {
  padding-left: 170rpx;
}

.right view {
  width: 20rpx;
  height: 20rpx;
  position: relative;
  top: 8rpx;
  border: 2rpx solid #000;
  padding: 20rpx 18rpx 17rpx 18rpx;
  border-radius: 50%;
}

.right image {
  position: absolute;
  top: 15rpx;
  left: 12rpx;
  display: block;
  width: 30rpx;
  height: 30rpx;
}

.dz {
  display: flex;
  padding: 20rpx 60rpx 0 20rpx;
  justify-content: space-between;
}

.dz .dzz image {
  width: 30rpx;
  height: 30rpx;
}

.dz .dzz view:nth-child(2) {
  font-size: 24rpx;
  display: inline-block;
  margin-top: 20rpx;
  color: rgb(128, 115, 115);
}

.dz .dzy image {
  width: 75rpx;
  height: 74rpx;
}

.dz .dzy view {
  font-size: 24rpx;
}

.jtdz {
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  color: rgb(110, 97, 97);
}

.jtdz image {
  /* 通过vertical-align:middle实现现图片与文字水平对齐，需要区分html是行内元素，还是块状元素；例如：标签img、span是行内元素；标签p是块状元素则需要将标签p通过diaplay:inline-block;转化为行内元素； */
  vertical-align: middle;
  width: 30rpx;
  height: 30rpx;
}

